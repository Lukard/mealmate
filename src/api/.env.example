# MealMate API Configuration
# Copy this file to .env and update values for your environment

# ======================
# Database Configuration
# ======================
# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/meal_automation

# ======================
# JWT Authentication
# ======================
# Secret key for signing access tokens (use a long, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
# Secret key for refresh tokens
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
# Access token expiration
JWT_EXPIRES_IN=15m
# Refresh token expiration
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# Server Configuration
# ======================
# Port for the API server (use 3001 to avoid conflict with UI on 3000)
PORT=3001
# Environment (development, production, test)
NODE_ENV=development

# ======================
# CORS Configuration
# ======================
# Allowed origin for CORS requests
CORS_ORIGIN=http://localhost:3000

# ======================
# Scraping Configuration
# ======================
# Enable/disable scraping functionality
SCRAPING_ENABLED=true
# Rate limit for scraping requests per minute
SCRAPING_RATE_LIMIT=100
# Timeout for scraper requests in milliseconds
SCRAPING_TIMEOUT=30000
# Maximum concurrent scraping requests
SCRAPING_CONCURRENCY=3

# ======================
# Logging
# ======================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ======================
# AI Configuration (Phase 1)
# ======================
# LLM Provider: groq (free MVP), google, anthropic, mistral
LLM_PROVIDER=groq
# Model to use (provider-specific)
LLM_MODEL=llama-3.1-70b-versatile
# Optional fallback provider
# LLM_FALLBACK_PROVIDER=google

# Groq API Key (get free at console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Google AI API Key (for Gemini - optional)
# GOOGLE_AI_API_KEY=AIza_your_google_key_here

# Anthropic API Key (for Claude - production)
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Embeddings Provider: huggingface (free), supabase, openai
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# HuggingFace Token (optional, for higher rate limits)
# HF_TOKEN=hf_your_huggingface_token_here

# AI Generation Settings
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4096
AI_TIMEOUT_MS=30000
LLM_RETRY_COUNT=2
LLM_RETRY_DELAY_MS=1000
