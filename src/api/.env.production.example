# Database Configuration
# Supabase connection string format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=

# JWT Authentication
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (optional - for caching and rate limiting)
REDIS_URL=

# Application Settings
NODE_ENV=production
PORT=3000

# CORS Configuration
CORS_ORIGIN=https://your-vercel-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Supermarket Scraper Configuration
MERCADONA_API_URL=https://tienda.mercadona.es/api
SCRAPER_RATE_LIMIT_MS=1000
SCRAPER_MAX_RETRIES=3
