{
  "name": "@meal-automation/api",
  "version": "0.1.0",
  "description": "Backend API for meal automation - Hono REST API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed-supermarkets.ts && tsx scripts/seed-dietary-restrictions.ts && tsx scripts/seed-recipes-db.ts",
    "db:seed:supermarkets": "tsx scripts/seed-supermarkets.ts",
    "db:seed:restrictions": "tsx scripts/seed-dietary-restrictions.ts",
    "db:seed:recipes": "tsx scripts/seed-recipes-db.ts",
    "db:setup": "tsx scripts/setup-db.ts"
  },
  "dependencies": {
    "@meal-automation/shared": "*",
    "@meal-automation/core": "*",
    "@meal-automation/scraper": "*",
    "hono": "^4.3.0",
    "@hono/node-server": "^1.11.0",
    "@hono/zod-openapi": "^0.14.0",
    "@hono/swagger-ui": "^0.3.0",
    "drizzle-orm": "^0.31.0",
    "postgres": "^3.4.0",
    "zod": "^3.23.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.22.0"
  }
}
